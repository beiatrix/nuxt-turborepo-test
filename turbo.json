{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local", 
    ".github/**",
    "package.json"
  ],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "dotEnv": [".env"],
      "env": ["APP_NAME"],
      "outputs": [".nuxt/**", ".output/**", "dist/**"]
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
